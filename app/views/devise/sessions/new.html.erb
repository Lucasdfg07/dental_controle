<section class="text-center user_login mb-4">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'col-md-4 offset-md-4 text-center'}) do |f| %>

    <section class="logo">
      <%= image_tag 'molar.png', class: 'molar', alt: 'dente logo' %>
    </section>

    <section class="field input-group">
      <span class="input-group-addon"><%= image_tag 'dentist.png', alt: 'dentista logo' %></span>
      <%= f.email_field :email, autofocus: true, placeholder: 'Digite seu Email', autocomplete: "email", class: 'form-control' %>
    </section>

    <section class="field input-group">
      <span class="input-group-addon"><%= image_tag 'shield.png', alt: 'senha logo' %></span>
      <%= f.password_field :password, placeholder: 'Digite sua Senha', autocomplete: "current-password", class: 'form-control' %>
    </section>

    <% if devise_mapping.rememberable? %>
      <section class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </section>
    <% end %>

    <section class="actions">
      <%= f.submit "Entrar", class: 'btn btn-info' %>
    </section>

    <br />
    
    <%= render "devise/shared/links" %>
  <% end %>
</section>